<div class="top-nav">
  <div class="container">
    <div class="nav-wrapper"><h1 class="page-title white-text">Word by Word</h1></div>
  </div>
</div>

  <div class="row">

    <div class="col s12">
      <div class="card  blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">What is Word-By-Word</span>
          <ul>
            <li>An easy-to-use, gamified educational tool to help students build foundational language skills</li>
            <li>The project is currently undergoing extensive construction and expansion, but feel free to register and give our <em> very </em> early release a try while we develop! </li>
          </ul>
        </div>
      </div>
    </div>
  </div>


  <div class="row">

    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Quick Demo</span>

          <div class="card-action">
            <a href="/demo" > Quick Demo </a>
          </div>
        </div>
      </div>
    </div>




    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Login</span>
          <%= form_for(:user, :url => session_path(:user)) do |f| %>
            <%= f.label :email, class: 'txtLbl' %>
            <%= f.text_field :email, id: 'icon_prefix' %>
            <br>
            <br>
            <%= f.label :password, html: {class: 'txtLbl'} %>
            <%= f.password_field :password, html: {class: 'txtIn'} %>
            <br>
            <br>
            <%= f.submit 'Sign in' , class: 'waves-effect waves-light btn' %>
            <a class="waves-effect waves-light btn" href='/users/sign_up'> Create an account</a>
            <br>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
            <br>
            <br>
            <div class="card-action">
              <%= link_to "Forgot your password?", new_password_path(:user) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
