<div id="homeWrap">

<div id="homeLogin">
  <%= form_for(:user, :url => session_path(:user)) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>

    <br>
    <%= f.submit 'Sign in' %>
    <%= link_to "Forgot your password?", new_password_path(:user) %>
  <% end %>

</div>

</div>
