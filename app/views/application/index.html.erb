<%= react_component 'NavBar', {currentUser: current_user} %>
<%= react_component 'HomeInfo', %>

<% if !current_user %>
  <div id="homeLogin" >
    <%= form_for(:user, :url => session_path(:user)) do |f| %>
      <%= f.text_field :email %>
      <%= f.password_field :password %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      <%= f.submit 'Sign in' %>
      <%= link_to "Forgot your password?", new_password_path(:user) %>
    <% end %>
  </div>
<% end %>


<%= react_component 'Footer' %>
